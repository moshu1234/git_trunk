<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#878fc3"
    tools:context="com.example.tao.myapplication.MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GREEDY SNAKE"
        android:id="@+id/snakeTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:layout_alignParentEnd="false"
        android:background="#878fc3"
        android:textAlignment="center"
        android:textColor="#a8ab4c"
        android:textSize="@dimen/abc_action_bar_progress_bar_size"
        android:textStyle="bold"
        android:autoText="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="START"
        android:id="@+id/snakestart1"
        android:layout_marginTop="97dp"
        android:layout_below="@+id/snakeTitle"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="INFO"
        android:id="@+id/snakeinfo"
        android:layout_below="@+id/snakestart1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />
</RelativeLayout>

