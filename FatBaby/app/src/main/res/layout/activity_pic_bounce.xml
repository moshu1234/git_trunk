<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在屏幕上选择一个点，并点击保存"/>
    <com.example.andrewliu.fatbaby.UI.ExtendViews.BounceView
        android:layout_width="380dp"
        android:layout_height="450dp"
        android:src="@drawable/bounce2"
        android:id="@+id/bounce_test"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/point_save"
        android:text="保存选点"
        android:layout_marginLeft="5dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/point_clear"
        android:text="清除选点"
        android:layout_marginLeft="5dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bounce_start"
        android:text="开始游戏"
        android:layout_marginLeft="5dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bounce_select"
            android:text="选择图片"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
</LinearLayout>