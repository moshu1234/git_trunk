<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="30dp"
    android:layout_height="300dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/day1_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="68"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/day1_i"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:src="@drawable/wp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/day2_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="60"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/day2_i"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:src="@drawable/wp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/day3_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="72"
                android:layout_marginLeft="10dp"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/day3_i"
                android:layout_width="30dp"
                android:layout_height="72dp"
                android:layout_gravity="bottom"
                android:src="@drawable/wp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/day4_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="70"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/day4_i"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:src="@drawable/wp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/day5_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="80"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/day5_i"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:src="@drawable/wp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/day6_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="90"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/day6_i"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_gravity="bottom"
                android:src="@drawable/wp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/day7_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="85"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/day7_i"
                android:layout_width="wrap_content"
                android:layout_height="85dp"
                android:layout_gravity="bottom"
                android:src="@drawable/wp" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>